{
  "name": "@oh-my-git/cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "omg": "bin/omg.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "files": [
    "dist",
    "bin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@oh-my-git/core": "workspace:*",
    "@oh-my-git/shared": "workspace:*",
    "cac": "^6.7.14",
    "ink": "^6.2.3",
    "ink-select-input": "^6.2.0",
    "react": "^19.1.1",
    "react-devtools-core": "^6.1.5",
    "react-reconciler": "^0.32.0"
  }
}
