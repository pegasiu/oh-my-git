{
  "name": "oh-my-git",
  "private": true,
  "version": "0.1.0",
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "bundle": "node scripts/build-release.mjs",
    "release": "node scripts/build-release.mjs",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "typecheck": "turbo run typecheck",
    "changeset": "changeset",
    "version": "changeset version",
    "publish": "changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.29.6",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "bun-types": "^1.2.16",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css}": [
      "biome format --write"
    ]
  }
}
